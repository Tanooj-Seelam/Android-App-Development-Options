<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity"
    android:id="@+id/linearLayout">

    <ToggleButton
        android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/selector"
        android:textOff="Power Off"
        android:textOn="Power On"
        tools:layout_conversion_absoluteHeight="127dp"
        tools:layout_editor_absoluteY="299dp"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_conversion_absoluteWidth="209dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="392dp"
        android:layout_height="35dp"
        tools:layout_conversion_absoluteHeight="45dp"
        tools:layout_conversion_absoluteWidth="392dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="427dp" />

</LinearLayout>